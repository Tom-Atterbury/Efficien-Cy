<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:background="#FFFF0000"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/list_child"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="#FFFFBB00" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/list_child"
        android:paddingTop="30dp" />

    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time" />

    <TextView
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/percent" />

    <ImageView
        android:id="@+id/twitter"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/percent"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/share"
        android:layout_toRightOf="@+id/share"
        android:contentDescription="@+id/twitterDescription"
        android:scaleType="centerCrop"
        android:src="@drawable/twitter_icon" />

    <ImageView
        android:id="@+id/myspace"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/percent"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/twitter"
        android:layout_toRightOf="@+id/twitter"
        android:contentDescription="@+id/myspaceDescription"
        android:scaleType="centerCrop"
        android:src="@drawable/myspace" />

    <Button
        android:id="@+id/map_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="75dp"
        android:layout_toEndOf="@+id/percent"
        android:layout_toRightOf="@+id/percent"
        android:text="@string/map_button" />

    <Button
        android:id="@+id/productivity_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/percent"
        android:layout_toRightOf="@+id/percent"
        android:text="@string/productivity_button" />
    
    <Button
        android:id="@+id/settings_button"
        android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		android:src="@drawable/settings_button_2" />

</RelativeLayout>